{

  "manifest_version": 2,
  "name": "OCSP Checker",
  "version": "1.0",

  "description": "WIP OCSP Checker",

  "icons": {
    "48": "icon48.png"
  },

  "permissions": [
      "activeTab",
      "tabs"
    ],

  "content_security_policy": "script-src 'self' https://*.jquery.com; object-src 'self'",

  "browser_action": {
      "default_icon": "icon48.png",
      "default_title": "OCSP Checker",
      "default_popup": "extension.html"
    }

}
