{
   "description": "Vérifie la date de mise à jour de l'attesation OCSP d'un site.",
    "manifest_version": 2,
    "name": "OCSP Checker",
    "version": "1.0",
    "icons": {
	"48": "icons/icon.svg"
    },

    "applications": {
	"gecko": {
	    "id": "id@ocsp_checker",
	    "strict_min_version": "50"
	}
    },

    "content_scripts": [
	{
	    "matches": ["https://*/*", "http://*/*"]
	}
    ],

    "background": {
	"scripts": ["addon/url_sender.js", "addon/notif.js"]
    },

    "browser_action": {
	"default_icon":"icons/icon.svg",
	"default_title": "OCSP Checker",
	"default_popup": "addon/extension.html"
    },

    "permissions": ["nativeMessaging", "activeTab", "tabs"],

    "content_security_policy": "script-src 'self' https://*.jquery.com; object-src 'self'"
}
