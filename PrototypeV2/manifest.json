{
  "description": "Prototype d'OCSP Checker",
  "manifest_version": 2,
  "name": "OCSP Checker",
  "version": "2.0",
  "background": {
    "persistent": true,
    "scripts": [
      "src/addon/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "src/addon/content.js"
      ],
      "css": [
        "src/addon/style/popup.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "128": "assets/icons/icon.png"
  },
  "browser_action": {
    "default_icon": "assets/icons/icon.png",
    "default_title": "OCSP Checker",
    "default_popup": "src/extension.html"
  },
  "permissions": [
    "nativeMessaging",
    "webNavigation",
    "tabs",
    "https://*/"
  ]
}