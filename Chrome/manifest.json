{
    "description": "a",
    "manifest_version": 2,
    "name": "OCSP Checker",
    "version": "2.1",
    "options_page" : "src/options/option.html",
    "applications": {
        "gecko": {
            "id": "my_ext@example.org",
            "strict_min_version": "50.0"
        }
    },
    "background": {
        "scripts": [
            "dist/js/background.bundle.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "dist/js/content.bundle.js"
            ],
            "matches": [
                "https://*/*"
            ]
        }
    ],
    "icons": {
        "128": "assets/icons/icon.png"
    },
    "browser_action": {
        "default_icon": "assets/icons/icon.png",
        "default_title": "OCSP Checker",
        "default_popup": "dist/popup.html"
    },
    "permissions": [
        "nativeMessaging",
        "tabs",
        "storage"
    ]
}
